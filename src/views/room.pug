extends layout.pug

block content
    div#room_container
        header.room_header 
            span.exit_button 
                i.fa-solid.fa-chevron-left
                | 나가기                
            div.word_container 
                p 상대방의 금칙어
                span.forbidden_word
            span.timer 5:00
        div.chat_list
            div.matchButton_container 
                p.match_desc 게임을 시작하려면 매칭 시작 버튼을 눌러주세요.
                button.match_button.box-shadow 매칭 시작    
            //p.loading_msg 상대방을 기다리는 중입니다...                   
        form.message_form     
            div.message_preview
                label 상대
                p
                span
                    i.fa-solid.fa-angle-down   
            span.scrolldown_button.box-shadow
                i.fa-solid.fa-arrow-down               
            div.control_container
                span.guess_button
                    i.fa-solid.fa-pen-to-square  금칙어 맞추기
                div.time_controls
                    span.extend_button 
                        i.fa-solid.fa-plus  시간 연장
                    span.shorten_button 
                        i.fa-solid.fa-minus  시간 단축
            div.input_container                                
                input(type="text", placeholder="메시지를 입력해주세요.", maxLength=150)
                button
                    i.fa-solid.fa-arrow-up    
        include partials/exitModal
        include partials/resultModal
        include partials/winLossModal
        include partials/guessModal
    script(src="/socket.io/socket.io.js")
    script(src="/js/room.js")